<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.cdpaf"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <permission
        android:name="it.cdpaf..permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoapp"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="it.cdpaf.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.cdpaf.activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="it.cdpaf.activity.SearchListActivity"
            android:label="@string/title_activity_search_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="it.cdpaf.activity.CategoryGrid"
            android:label="@string/title_activity_category_grid"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="it.cdpaf.activity.DetailActivity"
            android:label="@string/title_activity_detail"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="it.cdpaf.activity.BasketActivity"
            android:label="@string/title_activity_detail"
            android:screenOrientation="portrait"  >
        </activity>
    </application>

</manifest>
